<div class="container">
  <form class="form" action="/users/register" method="POST">

    <div class="left-area">
      <p class="required-description">*必填欄位</p>
      <label for="user-name" class="user-name-label">名稱* : </label>

      <label for="user-email" class="user-email-label">email* : </label>

      <label for="user-password" class="user-password-label">密碼* : </label>

      <label for="user-confirmedPassword" class="user-confirmedPassword-label">確認密碼* : </label>
    </div>

    <div class="main-area">
      <p class="title">註冊</p>
      <input type="text" name="name" id="user-name" class="user-name" value="{{ name }}" placeholder="name" required> 
      <div class="warning"> </div>

      <input type="text" name="email" id="user-email" class="user-email" value="{{ email }}" placeholder="user@example.com" required>
      <div class="warning"> {{{ email_warning }}}</div>

      <input type="password" name="password" id="user-password" class="user-password" placeholder="password" required>
      <div class="warning"> {{{ password_warning }}} </div>

      <input type="password" name="confirmedPassword" id="user-confirmedPassword" class="user-confirmedPassword" placeholder="password" required>
      <div class="warning"> </div>

      <button class="record-button" type="submit">註冊</button>
      <a class="record-button" href="">Facebook註冊</a>
      <span>已有帳號? <a href="/users/login">登入</a></span>
    </div>

  </form>
</div>