<div class="container">
  <form class="form" action="/records/{{ records._id }}?_method=PUT" method="POST">

    <div class="left-area">
      
      <p class="required-description">*必填欄位</p>
      <label for="record-name" class="record-name-label">名稱*：</label>

      <label for="record-name" class="record-date-label">日期*：</label>

      <label for="record-category" class="record-date-label">類別*：</label>

      <label for="record-amount" class="record-amount-label">金額*：</label>
    </div>

    <div class="main-area">
      <p class="title">請修改你的支出</p>
      <input type="text" name="name" id="record-name" class="record-name" placeholder="支出名稱" value="{{ records.name }}" required> 
      <div class="warning"> </div>

      <input type="date" name="date" id="record-date" class="record-date" value="{{ date }}" required> 
      <div class="warning"> </div>

      <select name="category" id="record-category" class="record-date" required>
        <option class="record-category-option" value="">select</option>
        <option class="record-category-option" value="1" {{one_selected}}>家居物業</option>
        <option class="record-category-option" value="2" {{two_selected}}>交通出行</option>
        <option class="record-category-option" value="3" {{three_selected}}>休閒娛樂</option>
        <option class="record-category-option" value="4" {{four_selected}}>餐飲食品</option>
        <option class="record-category-option" value="5" {{five_selected}}>其他</option>
      </select>
      <div class="warning"> </div>

      <input type="number" name="amount" id="record-amount" class="record-amount" value="{{ records.amount }}" placeholder="支出金額" required inputmode="numeric"> 
      <div class="warning"> </div>

      <button class="record-button" type="submit">送出</button>
    </div>

  </form>
</div>